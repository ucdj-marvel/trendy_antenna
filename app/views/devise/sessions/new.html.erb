<div class="text-center">
  <main class="form-signin">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 fw-normal">Log in</h1>

        <div class="form-floating">
          <%= f.email_field :email, autocomplete: "email", autofocus: true , placeholder: "antenna@example.com", :class => "form-control" %>
          <%= f.label :email %>
        </div>

        <div class="form-floating">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => "form-control" %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="checkbox m-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit "Log in", :class => "w-100 btn btn-lg btn-primary" %>
    <% end %>
  </main>

  <%= render "devise/shared/links" %>
</div>
